{{#if error}}
  <div class="container p-2 my-2">
    <div class="alert alert-danger alert-dismissible">
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      <i class="fa-solid fa-triangle-exclamation"></i>
      {{mensaje}}
    </div>
  </div>
{{/if}}
{{#if info}}
    <div class="container p-2 my-2">
        <div class="alert alert-info alert-dismissible" role="alert">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            <i class="fa-solid fa-triangle-exclamation"></i>
            {{mensajeInfo}}
        </div>
    </div>    
{{/if}}
<div class="container p-4 my-4 border">
  <h2 class="center">Administrador de Reservas</h2>
    <div class="row">
      <div class="col text-end">
        Hola <strong>{{usuario}}!</strong>
        <a class="btn btn-danger" href="/admin/login/logout" title="Cerrar sesión de usuario"> 
          <i class="fa-solid fa-arrow-right-from-bracket"></i> 
          Cerrar Sesión
        </a>
        <a class="btn btn-secondary" href="/admin/reservas" title="Volver al listado de Reservas"> 
          <i class="fa-solid fa-arrow-right-arrow-left"></i> 
          Volver
        </a>
      </div>
    </div>
    <div class="row">
      <div class="col-2 align-items-end">
        <button type="button" class="btn btn-primary position-relative" title="Cantidad de reservas">
            Reservas
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                {{cantidad}}
            </span>
        </button>
      </div>
      <div class="col-7">
        <h3>Seleccionar Cliente para Listar Reservas</h3>
      </div>
    
      <form action="/admin/reservas/listarPorCliente" method="post">
        <input type="hidden" name="id_usuario" id="id_usuario" value="{{id_usuario}}">
        <div class="form-group mb-3 mt-3 col-7">
					<label for="cliente">Clientes para seleccionar:</label>
					<select class="form-select" name="id_cliente" id="id_cliente" {{estado}}>
						<option value="0" selected>Seleccione cliente...</option>
						{{#each clientes}}
						<option value="{{id}}">{{apellido}}, {{nombres}}</option>
						{{/each}}
					</select>
        </div>
        <div class="form-group mb-3 mt-3 col-4">
					<label for="cliente">Estados para seleccionar:</label>
					<select class="form-select" name="estado" id="estado" {{estado}}>
						<option value="9" selected>Todas las reservas...</option>
						<option value="1">Activas p/Entregar</option>
						<option value="2">Reservas Entregadas</option>
						<option value="0">Inactivas</option>
					</select>
        </div>
        <button type="submit" class="btn btn-primary {{estado}}"><i class="fa-solid fa-check"></i> Seleccionar</button>
        <button type="reset" class="btn btn-secondary {{estado}}"><i class="fa-solid fa-eraser"></i> Borrar</button>
      </form>
    </div>
</div>