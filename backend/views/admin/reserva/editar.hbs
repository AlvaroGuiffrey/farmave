{{#if error}}
  <div class="container p-2 my-2">
    <div class="alert alert-danger alert-dismissible">
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      <i class="fa-solid fa-triangle-exclamation"></i>
      {{mensaje}}
    </div>
  </div>
{{/if}}
{{#if info}}
    <div class="container p-2 my-2">
        <div class="alert alert-info alert-dismissible" role="alert">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            <i class="fa-solid fa-triangle-exclamation"></i>
            {{mensajeInfo}}
        </div>
    </div>    
{{/if}}
<div class="container p-4 my-4 border">
  <h2 class="center">Administrador de Reservas</h2>
    <div class="row">
      <div class="col text-end">
        Hola <strong>{{usuario}}!</strong>
        <a class="btn btn-danger" href="/admin/login/logout" title="Cerrar sesión de usuario"> 
          <i class="fa-solid fa-arrow-right-from-bracket"></i> 
          Cerrar Sesión
        </a>
        <a class="btn btn-secondary" href="/admin/reservas" title="Volver al listado de Reservas"> 
          <i class="fa-solid fa-arrow-right-arrow-left"></i> 
          Volver
        </a>
      </div>
    </div>
    <div class="row">
        <div class="col-2 align-items-end">
            <button type="button" class="btn btn-primary position-relative" title="Cantidad de reservas">
                Reservas
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        {{cantidad}}
                    </span>
                </button>
        </div>

        <div class="col-7">
            <h3>Editar Reserva</h3>
        </div>
    </div>
     <div class="container my-4 border">
        <form action="/admin/reservas/editar" method="post">
        <input type="hidden" name="idReserva" value="{{idReserva}}">
        <div class="row">
         <div class="col-sm-12">
            <p>Cliente: <b>{{cliente.apellido}}, {{cliente.nombres}}</b></p>
            <p>Domicilio: {{cliente.domicilio}} - Localidad: {{cliente-localidad}}</p>
            <p>Celular: {{cliente.celular}}</p>
            <p>Email: {{cliente.mail}}</p>
            <hr>
            <h2>{{promocion.nombre}}</h2>
            {{#if tieneImg}}
              <img src="{{{imagen}}}" class="img-fluid img-thumbnail" alt="Promoción sin imagen" style="margin: 20px 20px;">
            {{/if}}
            <hr>
            <p>{{promocion.detalle}}</p>
            <h4>Precio: $ {{promocion.precio}}</h4>
            <p>Cantidad reservada: {{reserva.cantidad}}</p> 
            <div class="form-group mb-3">
							<label for="cantidad">Cantidad a reservar:</label>
							<input type="number" name="cantidad" id="cantidad" placeholder="Cantidad" min="1" max="{{cantidadTope}}" value="{{reserva.cantidad}}">
						</div>
            <hr>
      </div>
      <h6><small>Id de la reserva: {{idReserva}}</small></h6>
      <h4 title="{{tituloEstado}}">Estado: {{reserva.estado}} - {{estadoReserva}} 
        <i class="fa-solid {{iconoEstado}}"></i>
      </h4>
			<div class="form-group mb-3 mt-3 col-4">
					<label for="cliente">Estados para seleccionar:</label>
					<select class="form-select" name="estado" id="estado" {{estado}}>
						<option value="9" >No modifica...</option>
						<option value="1" {{estado1}}>Activa</option>
						<option value="0" {{estado0}}>Inactiva</option>
					</select>
        </div>
     </div>
		 		<button type="submit" class="btn btn-primary {{estado}}"><i class="fa-solid fa-check"></i> Guardar</button>
        <button type="reset" class="btn btn-secondary {{estado}}"><i class="fa-solid fa-eraser"></i> Borrar</button>
      </form>
    </div>
</div>