{{#if alerta}}
  <div class="container p-2 my-2">
    <div class="alert alert-{{alertaTipo}} alert-dismissible">
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      <i class="fa-solid fa-triangle-exclamation"></i>
        {{mensaje}}
    </div>
  </div>
{{/if}}
<div class="container p-4 my-4 border">
  <h2 class="center">Administrador de Usuarios</h2>
    <div class="row">
      <div class="col text-end">
        Hola <strong>{{usuario}}!</strong>
        <a class="btn btn-danger" href="/admin/login/logout" title="Cerrar sesión de usuario"> 
          <i class="fa-solid fa-arrow-right-from-bracket"></i> 
          Cerrar Sesión
        </a>
        <a class="btn btn-secondary" href="/admin/usuarios" title="Volver al listado de Usuarios"> 
          <i class="fa-solid fa-arrow-right-arrow-left"></i> 
          Volver
        </a>
      </div>
    </div>
    <div class="row">
      <div class="col-2 align-items-end">
        <button type="button" class="btn btn-primary position-relative" title="Cantidad de usuarios">
            Usuarios
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                {{cantidad}}
            </span>
        </button>
      </div>
      <div class="col-7">
        <h3>Editar Usuario</h3>
      </div>
    </div>
      <form action="/admin/usuarios/editarUsuario" method="post">
        <input type="hidden" name="id" id="id" value="{{dato.id}}">
        <div class="form-group mb-3 mt-3">
          <div class="row">
          <div class="col-md-3"></div>
          <div class="col-md-6">
          <label for="usuario" class="form-label">Usuario</label>
          <input type="text" name="usuario" id="usuario" class="form-control" placeholder="Usuario" value="{{dato.usuario}}">
          </div>
          </div>
        </div>
        <div class="form-group mb-3">
          <div class="row">
          <div class="col-md-3"></div>  
          <div class="col-md-6">
          <label for="clave" class="form-label">Contraseña</label>
          <input type="password" name="clave" id="clave" class="form-control" placeholder="Clave" value="{{dato.clave}}">
          </div>
          </div>
        </div>
        <div class="form-group mb-3">
          <div class="row">
          <div class="col-md-3"></div>  
          <div class="col-md-6">
          <label for="tipo" class="form-label">Tipo de usuario</label>
          <select class="form-select" id="tipo" name="tipo">
              <option value="1" {{sel1}}>Cliente</option>
              <option value="2" {{sel2}}>Empleado</option>
              <option value="3" {{sel3}}>Administrador</option>
          </select>
          </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-3"></div>
        <div class="col-md-6">
        <button type="submit" class="btn btn-primary {{estado}}"><i class="fa-solid fa-check"></i> Guardar</button>
        <button type="reset" class="btn btn-secondary {{estado}}"><i class="fa-solid fa-eraser"></i> Borrar</button>
        </div>
        </div>
      </form>
    
</div>