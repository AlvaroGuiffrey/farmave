{{#if error}}
  <div class="container p-2 my-2">
    <div class="alert alert-danger alert-dismissible">
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      <i class="fa-solid fa-triangle-exclamation"></i>
      {{mensaje}}
    </div>
  </div>
{{/if}}
{{#if info}}
    <div class="container p-2 my-2">
        <div class="alert alert-info alert-dismissible" role="alert">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            <i class="fa-solid fa-triangle-exclamation"></i>
            {{mensajeInfo}}
        </div>
    </div>    
{{/if}}
<div class="container p-4 my-4 border">
  <h2 class="center">Administrador de Clientes</h2>
    <div class="row">
      <div class="col text-end">
        Hola <strong>{{usuario}}!</strong>
        <a class="btn btn-danger" href="/admin/login/logout" title="Cerrar sesión de usuario"> 
          <i class="fa-solid fa-arrow-right-from-bracket"></i> 
          Cerrar Sesión
        </a>
        <a class="btn btn-secondary" href="/admin/clientes" title="Volver al listado de Clientes"> 
          <i class="fa-solid fa-arrow-right-arrow-left"></i> 
          Volver
        </a>
      </div>
    </div>
    <div class="row">
      <div class="col-2 align-items-end">
        <button type="button" class="btn btn-primary position-relative" title="Cantidad de clientes">
            Clientes
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                {{cantidad}}
            </span>
        </button>
      </div>
      <div class="col-7">
        <h3>Ver Cliente</h3>
      </div>
    </div>
    <div class="row border p-2">
        <p>Id: {{cliente.id}}</p>
        <p>Nombres: {{cliente.nombres}}</p>
        <p>Apellidos: {{cliente.apellido}}</p>
        <p>Domicilio: {{cliente.domicilio}}</p>
        <p>Localidad: {{cliente.localidad}}</p>
        <p>Celular: {{cliente.celular}}</p>
        <p>Email: {{cliente.mail}}</p>
        <p>Id de Usuario: {{cliente.id_usuario}}</p>
        <p>Estado: {{cliente.estado}}</p>
        
      
    </div>
</div>