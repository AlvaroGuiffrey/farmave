{{#if error}}
  <div class="container p-2 my-2">
    <div class="alert alert-danger alert-dismissible">
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      <i class="fa-solid fa-triangle-exclamation"></i>
      {{mensaje}}
    </div>
  </div>
{{/if}}
{{#if suceso}}
    <div class="container p-2 my-2">
        <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            <i class="fa-regular fa-circle-check"></i>
            {{mensajeSuceso}}
        </div>
    </div>    
{{/if}}
{{#if info}}
    <div class="container p-2 my-2">
        <div class="alert alert-info alert-dismissible" role="alert">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            <i class="fa-solid fa-triangle-exclamation"></i>
            {{mensajeInfo}}
        </div>
    </div>    
{{/if}}
<div class="container p-4 my-4 border">
  <h2 class="center">Login de Usuario</h2>
  <p>{{usuario}}</p>
  <form class="row g-3" action="/admin/login" method="post">
    <div class="col-md-6">
      <label for="usuario" class="form-label">Usuario</label>
      <input type="text" class="form-control" id="usuarioId" name="usuario"> 
    </div>
    <div class="col-md-6">
      <label for="clave" class="form-label">Contraseña</label>
      <input type="password" class="form-control" id="claveId" name="clave">
    </div>
    <div class="col-6">
      <button type="submit" class="btn btn-primary"> <i class="fa-solid fa-arrow-right-to-bracket"></i> Ingresar</button>
      <button type="reset" class="btn btn-secondary {{estado}}"><i class="fa-solid fa-eraser"></i> Borrar</button>
    </div>
    <div class="col-6 text-end">
      <a href="/admin/login/cambiar" class="btn btn-outline-primary"><i class="fa fa-pencil"></i> Cambiar Contraseña</a>
      <a href="/admin/clienteNuevo/nuevo" class="btn btn-outline-secondary"><i class="fa-regular fa-circle-user"></i> Cliente Nuevo</a>
    </div>
  </form>
</div>