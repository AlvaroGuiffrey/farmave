{{#if error}}
  <div class="container p-2 my-2">
    <div class="alert alert-danger alert-dismissible">
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      <i class="fa-solid fa-triangle-exclamation"></i>
      {{mensaje}}
    </div>
  </div>
{{/if}}
{{#if info}}
    <div class="container p-2 my-2">
        <div class="alert alert-info alert-dismissible" role="alert">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            <i class="fa-solid fa-triangle-exclamation"></i>
            {{mensajeInfo}}
        </div>
    </div>    
{{/if}}
<div class="container p-4 my-4 border">
  <h2 class="center">Administrador de Promociones</h2>
    <div class="row">
      <div class="col text-end">
        Hola <strong>{{usuario}}!</strong>
        <a class="btn btn-danger" href="/admin/login/logout" title="Cerrar sesión de usuario"> 
          <i class="fa-solid fa-arrow-right-from-bracket"></i> 
          Cerrar Sesión
        </a>
        <a class="btn btn-secondary" href="/admin/promociones" title="Volver al listado de Promociones"> 
          <i class="fa-solid fa-arrow-right-arrow-left"></i> 
          Volver
        </a>
      </div>
    </div>
    <div class="row">
      <div class="col-2 align-items-end">
        <button type="button" class="btn btn-primary position-relative" title="Cantidad de promociones">
            Promociones
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                {{cantidad}}
            </span>
        </button>
      </div>
      <div class="col-7">
        <h3>Agregar Promoción</h3>
      </div>
    
      <form action="/admin/promociones/agregar" method="post" enctype="multipart/form-data">
        <input type="hidden" name="estado" value="1">
        <div class="form-group mb-3 mt-3">
          <input type="text" name="nombre" id="nombre" class="form-control" placeholder="Nombre">
        </div>
        <div class="form-group mb-3">
          <input type="text" name="detalle" id="detalle" class="form-control" placeholder="Detalle">
        </div>
        <div class="form-group mb-3">
          <label> Imagen: <input type="file" class="form-control" name="imagen" id="imagen"></label>
        </div>
        <div class="form-group mb-3">
          <input type="number" name="precio" id="precio" placeholder="Precio en $" step="0.01" min="0">
        </div>
        <div class="form-group mb-3">
          <input type="number" name="cantidad" id="cantidad" placeholder="Cantidad" min="0">
        </div>
        <button type="submit" class="btn btn-primary {{estado}}"><i class="fa-solid fa-check"></i> Guardar</button>
        <button type="reset" class="btn btn-secondary {{estado}}"><i class="fa-solid fa-eraser"></i> Borrar</button>
      </form>
    </div>
</div>